<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.whatshouldweeattoday.MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <fragment
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/listFrag"
            class="com.example.whatshouldweeattoday.ListFragment"
            tools:layout="@layout/fragment_list"></fragment>

        <fragment
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/detailFrag"
            class="com.example.whatshouldweeattoday.InformationFragment"
            tools:layout="@layout/fragment_information"></fragment>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
